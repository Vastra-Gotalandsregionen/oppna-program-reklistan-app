<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded" xmlns:app="components" actionBarHidden="true">
    <AbsoluteLayout id="pagewrapper">
        <GridLayout rows="auto, *, auto" columns="*" id="pagecontent" top="0" left="0" >
            <app:topbar />
            <!-- PAGE CONTENT -->
            <ListView row="1" col="0" itemTap="menuItemTap" items="{{ items }}">
                <ListView.itemTemplate>
                    <Label textWrap="true" cssClass="listviewLabel" text="{{ title }}" />
                </ListView.itemTemplate>
            </ListView>
            <!-- /PAGE CONTENT -->
            <app:appMessage />
        </GridLayout>
        <app:sidemenu />
    </AbsoluteLayout>
</Page>
