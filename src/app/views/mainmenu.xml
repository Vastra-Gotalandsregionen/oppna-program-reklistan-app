<Page xmlns="http://www.nativescript.org/tns.xsd" navigatingTo="navigatingTo" loaded="pageLoaded">

    <GridLayout rows="auto, *" swipe="swipe">

        <GridLayout row="0" id="actionbar" rows="auto, auto, *">
            <!-- Tabs: Back, search and menu -->
            <StackLayout row="0" orientation="vertical">
                <GridLayout id="head--action-bar" columns="*" orientation="horizontal">
                    <Image tap="backTap" cssClass="head--icon" col="0" src="{{iconClose}}" width="24" heigth="24" horizontalAlignment="right"/>
                </GridLayout>
                <StackLayout cssClass="head--divider" height="2"></StackLayout>
            </StackLayout>
        </GridLayout>

        <GridLayout id="pagecontent" cssClass="mainmenu" row="1">
            <ScrollView>
                <StackLayout>
                    <Label text="Ã–vrigt" cssClass="mainmenu--heading" />
                    <StackLayout cssClass="mainmenu--list-item--divider" height="1"></StackLayout>
                    <Repeater items="{{ resourceArticles }}">
                        <Repeater.itemTemplate>
                            <StackLayout>
                                <StackLayout cssClass="mainmenu--list-item" tap="resourceArticleTap">
                                    <Label text="{{ title }}" textWrap="true" cssClass="mainmenu--list-item--label" />
                                </StackLayout>
                                <StackLayout cssClass="mainmenu--list-item--divider" height="1"></StackLayout>
                            </StackLayout>
                        </Repeater.itemTemplate>
                    </Repeater>
                    <Label text="Developer" tap="developerTap" />
                </StackLayout>
            </ScrollView>
        </GridLayout>

    </GridLayout>
</Page>