<Page xmlns="http://www.nativescript.org/tns.xsd"
      navigatingTo="navigatingTo"
      loaded="loaded">

    <GridLayout rows="auto, *" swipe="swipe">
        <GridLayout row="0" id="actionbar" rows="auto, auto, *">
            <StackLayout row="0" orientation="vertical">
                <GridLayout id="head--action-bar" columns="*" orientation="horizontal">
                    <Image tap="backTap" cssClass="head--icon" col="0" src="{{iconClose}}" width="24" heigth="24" horizontalAlignment="right"/>
                </GridLayout>
                <StackLayout cssClass="head--divider" height="2"></StackLayout>
            </StackLayout>
        </GridLayout>
        <GridLayout id="pagecontent" row="1">
            <WebView id="webview" />
        </GridLayout>
    </GridLayout>
</Page>
